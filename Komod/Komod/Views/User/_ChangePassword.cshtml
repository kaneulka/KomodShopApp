@model ChangePasswordViewModel
@using Komod.Web.Models.UserModels
@using Komod.Web.Models
@{
    ViewBag.Title = "Изменение пароля";
}

<form asp-action="ChangePassword" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Изменение пароля для пользователя " + Model.Email })
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>
