@model ColorViewModel
@using Komod.Web.Models.ProductModels
@using Komod.Web.Models

<form asp-action="AddColor" role="form" method="post" enctype="multipart/form-data">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Добавление цвета" })
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <span asp-validation-for="Name"></span><br />
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="ColorCode"></span><br />
                    <label asp-for="ColorCode"></label>
                    <input asp-for="ColorCode" type="color" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>
