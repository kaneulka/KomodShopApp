@model BrandViewModel
@using Komod.Web.Models.BrandModels
@using Komod.Web.Models

<form asp-action="DeleteBrand" role="form">
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Удаление производителя" })

    <div class="modal-body">
        <input asp-for="Id" />
        Вы уверены, что хотите удалить @Model.BrandName?
    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { SubmitButtonText = "Удалить" })
</form>