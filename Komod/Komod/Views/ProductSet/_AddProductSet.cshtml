@model ProductSetViewModel
@using Komod.Web.Models.ProductModels
@using Komod.Web.Models

<form asp-action="AddProductSet" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Добавление комплекта" })
    <div class="modal-body">
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <span asp-validation-for="SetName"></span><br />
                    <label asp-for="SetName"></label>
                    <input asp-for="SetName" class="form-control" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="DiscounPercent"></span><br />
                    <label asp-for="DiscounPercent"></label>
                    <input asp-for="DiscounPercent" class="form-control" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="ActiveSet"></span><br />
                    <label asp-for="ActiveSet"></label>
                    <input asp-for="ActiveSet" class="form-control" />
                </div>
                <div class="form-group">
                    <ul>
                        @foreach (var a in Model.ProductsInAdmin)
                        {
                            <li>

                                <input type="checkbox" class="promocode-checkbox" name="productNames" value="@a.Name">

                                <label class="custom-unchecked">@a.Name</label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>

