@model CategoryViewModel
@using Komod.Web.Models.CategoryModels
@using Komod.Web.Models

<form asp-action="EditCategory" role="form" method="post" enctype="multipart/form-data">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Редактировать категорию" })
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-12">
                <input asp-for="Id" />
                <div class="form-group">
                    <span asp-validation-for="Name"></span><br />
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="Title"></span><br />
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="form-group">
                    <span asp-validation-for="TitleDescription"></span><br />
                    <label asp-for="TitleDescription"></label>
                    <input asp-for="TitleDescription" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ParentCategories"></label>
                    <select asp-for="ParentId" asp-items="@Model.ParentCategories" class="form-control">
                        <option value="0">Выберите категорию родителя...</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>