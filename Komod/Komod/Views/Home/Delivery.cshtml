    ViewData["Keywords"] = "магазин интернет Набитый комод Тольятти способы доставка заказ ";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- DELIVERY -->
<section class="main-about-us">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="section-title">Оплата и доставка</h2>
            </div>
        </div>
    </div>
    <div class="section-wrapper delivery">
        <div class="container">
            <div class="row">
                <div itemscope itemtype="http://schema.org/Organization" class="col-12">
                    <div itemscope itemtype="http://schema.org/DeliveryMethod">
                        <h3 class="delivery__title">Мы предоставляем способы доставки заказов:</h3>
                        <h3 class="delivery__title">Доставка по Тольятти:</h3>
                        <p class="delivery-cost__text">Автозаводский район: доставка 200 рублей, от 2000 бесплатно.</p>
                        <p class="delivery-cost__text">Центральный район: доставка 250 рублей, от 2500 бесплатно.</p>
                        <p class="delivery-cost__text">Комсомольский район: доставка 300 рублей, от 3000 бесплатно.</p>
                        <p class="delivery-cost__text">Самовывоз - бесплатно с г. Тольятти, Ворошилова 24. Заказ будет располагаться в пункте самовывоза в течении 3 дней после оформления заказа</p>
